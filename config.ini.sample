[defaults]
# Możesz ustawić wartości domyślne tutaj (opcjonalne)
# host = imap.example.com
# user = user@example.com
# ssl = true
# limit = 5
# forward_to = yourname@gmail.com         ; używane przez gmfw.py (SMTP)
# smtp_host = smtp.example.com            ; SMTP serwera macierzystego (gmfw.py, domyślnie = host)
# smtp_port = 587
# smtp_ssl = true
# gmfwi.py - opcje:
# gmail_user = yourname@gmail.com         ; wymagane
# gmail_folder = INBOX                    ; folder na Gmail (domyślnie INBOX)
# mark_source_as_read = false             ; oznacz wiadomość jako przeczytaną na serwerze źródłowym przed przeniesieniem do Trash (domyślnie false)
# filters = ...                           ; zobacz sekcję FILTRY poniżej

# HASŁA:
# Hasła są przechowywane bezpiecznie w keyring systemu (Windows Credential Manager, Linux Secret Service, macOS Keychain).
# Użyj flag --store-password i --store-gmail-password aby zapisać hasła.

[work]
host = imap.work.example.com
user = workuser@example.com
# port = 143
ssl = false
limit = 5
# gmail_user = yourname@gmail.com
# gmail_folder = INBOX

# SPAM_KEYWORDS_FILE (działa tylko w gmfwi.py):
# Ścieżka do pliku z listą słów kluczowych/wyrażeń regularnych (jedno na linię).
# Jeśli któreś wyrażenie zostanie znalezione w treści wiadomości (body),
# wiadomość zostanie przeniesiona do Trash na serwerze źródłowym i NIE trafi na Gmail.
# Ścieżka może być względna (względem katalogu config.ini) lub bezwzględna.
# spam_keywords_file = spam_keywords.txt

# FILTRY (działa tylko w gmfwi.py):
# Format: field:value:label1,label2:never_spam
# - field: to, from, subject
# - value: tekst do wyszukania ALBO regex (case-insensitive)
#   * Zwykły tekst: gmail.com (szuka tekstu w polu)
#   * Regex: .*@facebookmail\.com (automatycznie wykrywane)
# - label1,label2: lista etykiet oddzielonych przecinkiem
# - never_spam: true/false - czy usunąć wiadomość z SPAM
# Każdy filtr w nowej linii
# filters = 
#     to:kuj4@o2.pl:kuj4@o2.pl:true
#     from:important@company.com:Ważne:true
#     from:.*@facebookmail\.com:Facebook:true
#     subject:Invoice|FV:Faktury:false
